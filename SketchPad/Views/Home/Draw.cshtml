@{
    ViewBag.Title = "Sketch Pad";
}

<div id="drawing-canvas-container"></div>

<div id="background-selector">
    <ul data-bind="foreach: availableBackgrounds">
        <li class="background-image-picker">
            <img data-bind="imageData: Data, click: $parent.applyBackgroundImage" /
        </li>
    </ul>
    <ul data-bind="foreach: availableSprites">
        <li class="background-image-picker">
            <img data-bind="imageData: Data" /
        </li>
    </ul>
</div>

<script>
    $(function () {
        ko.applyBindings(new SketchPad.ViewModel.Draw(new SketchPad.Data.ImageSource(), "drawing-canvas-container"));
    });
</script>